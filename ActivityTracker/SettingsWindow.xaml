<Window x:Class="ActivityTracker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityTracker"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="159.574" Width="330">
    <Grid>
        <Label Content="Database file" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DatabaseFileName" HorizontalAlignment="Stretch" Height="23" Margin="15,50,15,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="SelectFile" Content="Select file" HorizontalAlignment="Right" Margin="0,16,15.2,0" VerticalAlignment="Top" Width="75" Click="SelectFile_Click"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Center" Margin="75,89,173.2,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Center" Margin="178,89,70.2,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>

    </Grid>
</Window>
