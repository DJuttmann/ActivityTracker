<Window x:Class="ActivityTracker.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityTracker"
        mc:Ignorable="d"
        Title="LoginWindow" Height="168" Width="300">
    
    <Grid>
        
        <TextBox x:Name="LoginName" HorizontalAlignment="Left" Height="23" Margin="109,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <PasswordBox x:Name="LoginPassword" HorizontalAlignment="Left" Height="23" Margin="109,48,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="User name" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="4,6,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Password" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="4,46,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="ButtonLogin" Content="Login" HorizontalAlignment="Left" Margin="40,101,0,0" VerticalAlignment="Top" Width="75" Click="ButtonLoginClick"/>
        <Button x:Name="ButtonLoginCancel" Content="Cancel" HorizontalAlignment="Left" Margin="177,101,0,0" VerticalAlignment="Top" Width="75" Click="ButtonLoginCancelClick"/>

    </Grid>
</Window>
